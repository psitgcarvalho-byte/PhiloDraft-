---
layout: base.njk
---
<section class="article">
  <div class="container">
    <header>
      <div class="badges">
        {% for t in tags %}
          {% if t != "posts" %}
            <a class="badge" href="/tags/#{{ t | slug }}">{{ t }}</a>
          {% endif %}
        {% endfor %}
        {% if featured %}<span class="badge gold">Destaque</span>{% endif %}
      </div>
      <h1>{{ title }}</h1>
      <p class="sub">{{ description }}</p>
      <div class="meta">
        <span><time datetime="{{ page.date | isoDate }}">{{ page.date | readableDate }}</time></span>
        {% if readingTime %}<span>Â· {{ readingTime }}</span>{% endif %}
      </div>
      <div class="hero-actions" style="margin-top:14px;">
        <a class="btn" href="/artigos/">
          <svg width="18" height="18" viewBox="0 0 24 24" fill="none" aria-hidden="true"><path d="M15 18l-6-6 6-6" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/></svg>
          Voltar
        </a>
        <button class="btn primary" type="button" data-copy-link>
          <svg width="18" height="18" viewBox="0 0 24 24" fill="none" aria-hidden="true"><path d="M10 13a5 5 0 007.07 0l1.41-1.41a5 5 0 10-7.07-7.07L10 4.93" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/><path d="M14 11a5 5 0 00-7.07 0L5.52 12.4a5 5 0 007.07 7.07L14 19.07" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/></svg>
          Copiar link
        </button>
      </div>
    </header>

    <article class="prose">
      {{ content | safe }}
    </article>
  </div>
</section>
